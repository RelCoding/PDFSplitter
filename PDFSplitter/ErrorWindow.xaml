<Window x:Class="PDFSplitter.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFSplitter"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="237" Width="395" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="ErrorText" HorizontalAlignment="Center" Margin="0,48,0,0" TextWrapping="Wrap" Text="Irgendetwas ist schiefgelaufen." VerticalAlignment="Top" Height="89" Width="182" FontSize="18" FontFamily="Arial Black" Foreground="Red">
        </TextBlock>
        <Button x:Name="ErrorConfirmButton" Content="Ok" Margin="99,142,99,26" FontSize="18" FontFamily="Arial Black" Click="ErrorConfirmButton_Click" KeyDown="ErrorConfirmButton_KeyDown" IsDefault="True"/>

    </Grid>
</Window>
